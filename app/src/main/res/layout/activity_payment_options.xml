<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PaymentOptionsActivity">

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="318dp"
        android:layout_height="77dp"
        android:text="Choose one Option:"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
         />

    <ImageView
        android:id="@+id/iv_visa"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/visa" />

    <ImageView
        android:id="@+id/iv_mastercard"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/mastercard" />

    <ImageView
        android:id="@+id/iv_applepay"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/applepay" />
    <ImageView
        android:id="@+id/iv_paypal"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/paypal" />

</androidx.appcompat.widget.LinearLayoutCompat>