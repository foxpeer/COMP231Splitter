<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ExpensesDetailActivity">


    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:text="Expenses Detail"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewcontributors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Contributors: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtContributors"
            android:layout_width="98dp"
            android:layout_height="61dp"
            android:ems="10" />

    </LinearLayout>

    <Button
        android:id="@+id/button_cancel2"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@color/colorButton2"
        android:text="Update"
        android:textColor="@color/cardview_light_background"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_addexpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton3"
        android:textColor="@color/cardview_dark_background"
        android:text="ADD EXPENSES"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_viewExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/detail_cardview"
        tools:itemCount="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_paynow"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@color/colorButton1"
            android:text="PAY NOW"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_cancel3"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/colorButton2"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>